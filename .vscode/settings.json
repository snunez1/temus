{
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "./.github/prompts/claude-context.prompt.md"
    },
    {
      "file": "./.github/prompts/case-requirements.prompt.md"
    },
    {
      "file": "./.github/prompts/wind-power-domain.prompt.md"
    }
  ],
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use conventional commits format: type(scope): description. Types: feat, fix, docs, test, refactor, style. Be specific about wind forecasting changes and reference relevant wind farms (wf1-wf7) when applicable."
    }
  ],
  "github.copilot.chat.testGeneration.instructions": [
    {
      "text": "Generate comprehensive tests for wind power forecasting models including: time series validation, cross-validation with temporal splits, edge cases for extreme weather, and performance regression tests. Follow pytest conventions."
    }
  ],
  "chat.mcp.enabled": true,
  "chat.mcp.discovery.enabled": true,
  // Presentation development settings
  "livePreview.defaultPreviewPath": "/presentation/index.html",
  "livePreview.portNumber": 3000,
  "livePreview.showStatusBarItem": true,
  "livePreview.autoRefreshPreview": "On Changes to Saved Files",
  "liveServer.settings.port": 5500,
  "liveServer.settings.CustomBrowser": "chrome",
  // Editor settings for markdown
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  // File associations
  "files.associations": {
    "*.md": "markdown"
  },
  // Spell checker words for presentation content
  "cSpell.words": [
    "Temus",
    "Temasek",
    "McKinsey",
    "RMSE",
    "XGBoost",
    "LSTM",
    "MCP",
    "decarbonization",
    "GEF2012",
    "Kubernetes",
    "Grafana",
    "Prometheus",
    "revealjs"
  ]
}